# ========================================
# Cloud Proxmox - Production Configuration
# ========================================
# Copy this file to .env and fill in your values

# ============ DATABASE ============
DB_USER=cloud
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=cloud_proxmox

# ============ PROXMOX VE ============
PROXMOX_API_URL=https://your-proxmox-server:8006
PROXMOX_API_TOKEN=user@pam!tokenname=your-token-secret

# ============ PBS (OPTIONAL) ============
PBS_API_URL=https://your-pbs-server:8007
PBS_API_TOKEN=user@pbs!tokenname=your-token-secret

# ============ DISCORD AUTH ============
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=https://your-domain.com/auth/discord/callback

# ============ JWT ============
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# ============ PUBLIC URLS ============
# The public URL where your API will be accessible (for Caddy proxy)
PUBLIC_API_URL=https://your-domain.com/api

# ============ PORTS ============
# Ports for Caddy to proxy to
API_PORT=3002
WEB_PORT=3000

